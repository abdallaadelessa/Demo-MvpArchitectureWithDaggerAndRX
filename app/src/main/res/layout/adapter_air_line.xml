<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_small"
        android:paddingLeft="@dimen/margin_medium"
        android:paddingRight="@dimen/margin_medium"
        android:paddingTop="@dimen/margin_small"
    >

        <ImageView
            android:id="@+id/ivAirLineIcon"
            android:layout_width="@dimen/listing_air_line_icon_size"
            android:layout_height="@dimen/listing_air_line_icon_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            tools:src="@mipmap/ic_launcher"/>

        <com.abdallaadelessa.core.view.custom.TextViewWithMovingMarquee
            android:id="@+id/tvAirLineName"
            style="@style/LargeTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ivAirLineIcon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_toEndOf="@+id/ivAirLineIcon"
            android:layout_toLeftOf="@+id/likeBtn"
            android:layout_toRightOf="@+id/ivAirLineIcon"
            android:layout_toStartOf="@+id/likeBtn"
            tools:text="Medium Text"/>

        <com.like.LikeButton
            android:id="@+id/likeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:anim_scale_factor="2"
            app:circle_end_color="@color/colorGold"
            app:circle_start_color="@color/colorGold"
            app:dots_primary_color="@color/colorGold"
            app:dots_secondary_color="@color/colorGold"
            app:icon_size="20dp"
            app:icon_type="star"
            app:like_drawable="@drawable/ic_star_selected"
            app:unlike_drawable="@drawable/ic_grey_star_not_selected"
            app:liked="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_alignBaseline="@+id/tvAirLineName"
        />
    </RelativeLayout>
</android.support.v7.widget.CardView>
